

<h1>posts</h1>

<table>
  

  <tbody>

<div>
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @posts.each do |post| %>
      <a>
       <div class="col-sm-11 blogposts">
       <div class="text-center">
     <h2><%= post.username %></h2>
        <h6><%= post.created_at.strftime('%b %d, %Y') %></h6>
      </div>
      <div class="text-center">
         <%= raw(post.description).truncate(250) %>
         <b><%= link_to "Continue reading...", post_path(post) %></b> 
          <p> </p>
      </div>
      <div class="text-center">
      <p>
       <%= link_to 'Edit', edit_post_path(post), class: "btn btn-default" %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-danger"%>
        </p>
         </div>
          </div>
      </a>

    <% end %>
      </div>
</div>
  </tbody>


</table>

<div></div>
  <div class="text-center"><%= link_to 'New  Post', new_post_path,class: "btn btn-default"  %></div>
